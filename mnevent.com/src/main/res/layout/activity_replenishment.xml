<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_picture">

    <RelativeLayout
        android:id="@+id/topbar_title"
        android:layout_width="fill_parent"
        android:layout_height="70px"
        android:background="#CDCDB4" >

        <TextView
            android:id="@+id/titlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:text="补货操作 "
            android:textColor="@android:color/black"
            android:textSize="32px"
            />

        <!--    <TextView
                android:id="@+id/titlename2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/titlename"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:text="*点击数字修改走步数(步数:满仓数)"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="30px"
                />-->

        <Button
            android:id="@+id/btn_back"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textSize="32px"
            android:textColor="@android:color/black"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_back"
            android:text="移动轨道"
            android:textSize="32px"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginRight="10px"
            android:id="@+id/move"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginTop="70px"
        android:background="@color/hui_color3">

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130px"></android.support.v7.widget.RecyclerView>
</RelativeLayout>