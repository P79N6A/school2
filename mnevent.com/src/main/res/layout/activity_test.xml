<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray">

    <RelativeLayout
        android:id="@+id/topbar_title"
        android:layout_width="fill_parent"
        android:layout_height="70px"
        android:background="#CDCDB4" >
        <!--android:text="货道测试"-->
        <TextView
            android:id="@+id/titlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"

            android:text="货道测试"
            android:textColor="@android:color/black"
            android:textSize="26px"
            />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="返回"
            android:textSize="26px"
            android:textColor="@android:color/black"/>
        <!--android:text="清空测试结果"-->
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_back"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="清空测试结果"
            android:textSize="26px"
            android:textColor="@android:color/black"/>

        <!--android:text="获取温度和门状态"-->
        <Button
            android:id="@+id/getstatusbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="获取温度和门状态"
            android:textSize="22px"
            android:layout_toLeftOf="@id/btn_clear"
            android:layout_marginRight="20px"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/datetimerl"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_below="@+id/topbar_title"
        android:layout_marginTop="10px"
        android:background="@drawable/testone">

        <!--<Button
            android:id="@+id/getstatusbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="获取温度和门状态"
            android:textSize="22px"
            android:textColor="@android:color/black"/>-->
        <!--android:text="设置安卓设备的最新时间到主控"-->
        <Button
            android:id="@+id/setvmcdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="设置安卓设备的最新时间到主控"
            android:textSize="22px"
            android:textColor="@android:color/black"/>
        <!--android:text="取得主控的时间"-->
        <Button
            android:id="@+id/getvmcdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/setvmcdate"
            android:gravity="center"
            android:text="取得主控的时间"
            android:textSize="22px"
            android:textColor="@android:color/black"/>

        <!--android:text="取得主控当前库存"-->
        <Button
            android:id="@+id/getvmcstock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/getvmcdate"
            android:gravity="center"
            android:text="取得主控当前库存"
            android:textSize="22px"
            android:textColor="@android:color/black"/>

        <!--android:text="货道商品编号"-->
        <Button
            android:id="@+id/getvmcgoodscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/getvmcstock"
            android:gravity="center"
            android:text="货道商品编号"
            android:textSize="22px"
            android:textColor="@android:color/black"/>

        <!--android:text="货道现金价格"-->
        <Button
            android:id="@+id/getvmccash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/getvmcgoodscode"
            android:gravity="center"
            android:text="货道现金价格"
            android:textSize="22px"
            android:textColor="@android:color/black"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/input_title01"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="4px"
        android:layout_marginTop="10px"
        android:layout_below="@+id/datetimerl"
        android:background="@drawable/testone" >


       <!-- android:text="全体或单层"-->
        <TextView
            android:id="@+id/vmcode_titlename2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:text="全体或单层"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:textSize="24px" />

        <Spinner
            android:id="@+id/SpinnerOneLevel"
            android:layout_width="220px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/vmcode_titlename2"></Spinner>

        <!--android:text="循环次数:"-->
        <TextView
            android:id="@+id/forleveltv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18px"
            android:layout_marginLeft="10px"
            android:text="循环次数:"
            android:layout_toRightOf="@+id/SpinnerOneLevel"
            android:textColor="#ff0000"
            android:textSize="24px"
            android:layout_centerVertical="true"
            />
        <Spinner android:id="@+id/SpinnerFor"
            android:layout_marginLeft="10px"
            android:layout_marginTop="10px"
            android:layout_width="160px"
            android:layout_toRightOf="@+id/forleveltv"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"></Spinner>


        <!--android:text="测试"-->
        <Button
            android:id="@+id/onelevel_bt"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:text="测试"
            android:textSize="22px" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/input_title02"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="4px"
        android:layout_marginTop="10px"
        android:layout_below="@+id/input_title01"
        android:background="@drawable/testone" >

       <!-- android:text="单个货道或电机"-->
        <TextView
            android:id="@+id/vmcode_titlename3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10px"
            android:layout_marginLeft="10px"
            android:text="单个货道或电机"
            android:textColor="#555"
            android:textSize="24px"
            android:layout_centerVertical="true"
            />

        <Spinner
            android:id="@+id/SpinnerOneTrack"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/vmcode_titlename3"></Spinner>

        <Button
            android:id="@+id/onetrack_bt"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:text="test"
            android:textSize="22px" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/input_title022"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="4px"
        android:layout_marginTop="10px"
        android:layout_below="@+id/input_title02"
        android:background="@drawable/testone" >


        <!--android:text="故障轨道:"-->
        <TextView
            android:id="@+id/errotrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10px"
            android:layout_marginLeft="10px"
            android:text="故障轨道:"
            android:textColor="#787878"
            android:textSize="24px"
            />



    </RelativeLayout>

    <!--android:text="测试结果"-->
    <TextView
        android:id="@+id/input_title04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10px"
        android:layout_marginLeft="12px"
        android:layout_below="@+id/input_title022"
        android:textColor="@android:color/black"
        android:text="测试结果"
        android:textSize="24px"
        />


    <RelativeLayout
        android:id="@+id/input_title05"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="0px"
        android:layout_marginBottom="50px"
        android:layout_below="@+id/input_title04"
        android:background="@drawable/testmulti" >

        <EditText
            android:id="@+id/test_result_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:gravity="top"
            android:maxLines="58"
            android:textColor="#000000"
            android:textSize="26px"
            android:enabled="false"
            android:editable="false"
            android:ems="10"
            android:inputType="textMultiLine" />

    </RelativeLayout>

    <TextView
        android:id="@+id/hintinfo"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0px"
        android:paddingLeft="4px"
        android:gravity="left"
        android:text=""
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textSize="28px"
        />


</RelativeLayout>