<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="620px"
    android:layout_height="436px"
    android:background="@drawable/textview_wubianbianneibaikuang30">

    
   <TextView
       android:id="@+id/title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="52px"
       android:textColor="@color/lan_color2"
       android:text="提示"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20px"
       />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lan_color2"
        android:layout_marginTop="100px"/>
    <!--android:text="是否确认保存！"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:text="是否确认保存！"
        android:id="@+id/text"
        android:layout_marginTop="120px"
        android:textSize="32px"
        android:textColor="@color/hei_color1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lan_color2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <!--android:text="取消"-->
        <TextView
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/hui_color1"
            android:textSize="38px"
            android:gravity="center"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/lan_color2"/>
        <!--android:text="确定"-->
        <TextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@color/lan_color2"
            android:textSize="38px"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>