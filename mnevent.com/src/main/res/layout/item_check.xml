<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="200px">

    <ImageView
        android:id="@+id/image"
        android:layout_width="180px"
        android:layout_height="180px"
        android:layout_marginLeft="10px"
        android:layout_centerVertical="true"
        android:background="@drawable/noimage"/>
    <TextView
        android:id="@+id/guidao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轨道号：11"
        android:textColor="@color/hei_color1"
        android:layout_marginLeft="210px"
        android:layout_marginTop="10px"
        android:textSize="26px"/>
    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32365"
        android:textColor="@color/hei_color1"
        android:layout_marginLeft="210px"
        android:layout_marginTop="80px"
        android:textSize="26px"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="眼镜"
        android:textColor="@color/hei_color1"
        android:layout_marginLeft="210px"
        android:layout_marginBottom="10px"
        android:layout_alignParentBottom="true"
        android:textSize="26px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_centerHorizontal="true"
        android:text="系统库存"
        android:layout_marginRight="40px"
        android:textSize="28px"
        android:textColor="@color/hei_color1"
        />
    <TextView
        android:id="@+id/libs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="40px"
        android:textColor="@color/hei_color1"
        android:layout_marginTop="90px"
        android:textSize="26px"
        android:text="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:layout_toRightOf="@id/libs"
        android:layout_marginLeft="60px"
        android:text="当前库存"
        android:textSize="28px"
        android:textColor="@color/hei_color1"
        />
    <TextView
        android:id="@+id/libstwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/hei_color1"
        android:layout_marginTop="90px"
        android:layout_toRightOf="@id/libs"
        android:layout_marginLeft="140px"
        android:textSize="26px"
        android:text="0"/>
<TextView
    android:id="@+id/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:textColor="@color/hei_color1"
    android:textSize="26px"
    android:text=""
    />
    <TextView
        android:id="@+id/jia"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_toLeftOf="@id/text2"
        android:text="+"
        android:gravity="center"
        android:textSize="32px"
        android:layout_centerVertical="true"
        android:textColor="@color/hei_color1"
        android:background="@drawable/textview_neihuikuang"
        android:layout_marginTop="10px"
        android:layout_marginRight="20px"/>
    <TextView
        android:id="@+id/jian"
        android:layout_width="60px"
        android:layout_height="60px"
        android:text="-"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="32px"
        android:layout_toLeftOf="@id/jia"
        android:textColor="@color/hei_color1"
        android:background="@drawable/textview_neihuikuang"
        android:layout_marginBottom="10px"
        android:layout_marginRight="30px"
        android:layout_marginLeft="10px"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/hui_color3"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>