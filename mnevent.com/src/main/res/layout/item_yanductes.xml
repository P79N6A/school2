<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220px"
    android:layout_height="340px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="21px">
    <com.ruffian.library.widget.RImageView
        android:id="@+id/image"
        android:layout_width="220px"
        android:layout_height="220px"
        app:border_color="@color/hui_color3"
        app:border_width="2px"
        app:corner_radius="6px"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/zhezhao"
        android:layout_width="220px"
        android:layout_height="220px"
        android:background="@mipmap/zhezhao"
        android:visibility="gone"
        android:text="Goods details"
        android:textColor="#deceff"
        android:textSize="20px"
        android:gravity="center"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="37px"
        android:layout_below="@id/image"
        android:layout_marginTop="10px"
        android:layout_centerHorizontal="true"
        android:text="€290.00"
        android:textSize="28px"
        android:textColor="@color/hei_color1"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="26px"
        android:layout_below="@id/price"
        android:layout_marginTop="6px"
        android:textColor="@color/hei_color1"
        android:textSize="20px"
        android:text="李维斯男士太阳镜"
        android:layout_centerHorizontal="true"/>
