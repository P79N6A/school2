<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="620px"
    android:layout_height="436px"
    android:background="@drawable/textview_wubianbianneibaikuang30">

    
    <ImageView
        android:id="@+id/back"
        android:layout_width="25px"
        android:layout_height="25px"
        android:layout_marginLeft="567px"
        android:layout_marginTop="27px"
        android:background="@mipmap/hx"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="290px"
        android:layout_height="190px"
        android:background="@mipmap/chok"
        android:layout_marginTop="54px"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270px"
        android:layout_centerHorizontal="true"
        android:textColor="#fff68c88"
        android:textSize="30px"
        android:text="Delivery failure..."
            />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="323px"
        android:textSize="24px"
        android:layout_centerHorizontal="true"
        android:textColor="#fff68c88"
        android:text="Please try to repurchase"
        />

</RelativeLayout>