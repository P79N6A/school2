<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray">

    <RelativeLayout
        android:id="@+id/topbar_title"
        android:layout_width="fill_parent"
        android:layout_height="70px"
        android:background="#CDCDB4" >

        <TextView
            android:id="@+id/titlename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:text="菜单"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="180px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="返回销售"
            android:textSize="26sp"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topbar_title"
        android:layout_marginTop="10px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:background="#bcbcbc"
            android:layout_marginTop="0px">

            <TextView
                android:id="@+id/mainmacid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:text="主机编号："
                android:textColor="@android:color/black"
                android:textSize="24sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:background="#bcbcbc"
            android:layout_marginTop="10px">

            <Button
                android:id="@+id/btn_stocksupply"
                android:layout_width="320px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:text="补货操作/查看轨道库存"
                android:textSize="26sp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:background="#bcbcbc"
            android:layout_marginTop="10px">

            <Button
                android:id="@+id/btn_stockcheck"
                android:layout_width="320px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:text="库存盘点"
                android:textSize="26sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/last2hourstockcheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btn_stockcheck"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:text="最近盘点时间：无"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:background="#bcbcbc"
            android:layout_marginTop="10px">

            <Button
                android:id="@+id/btn_checkversion"
                android:layout_width="320px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:text="查看新版本"
                android:textSize="26sp"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/checkversion_newnotice"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toRightOf="@+id/btn_checkversion"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/new_notice"
                android:visibility="visible"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:background="#bcbcbc"
            android:layout_marginTop="10px">

            <Button
                android:id="@+id/btn_testmain"
                android:layout_width="320px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:text="出货测试"
                android:textSize="26sp"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/test_newnoticemain"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toRightOf="@+id/btn_testmain"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/new_notice"
                android:visibility="visible"
                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:background="#bcbcbc"
            android:layout_marginTop="10px">

            <Button
                android:id="@+id/btn_macpara"
                android:layout_width="320px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:text="机器基本参数"
                android:textSize="26sp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:background="#bcbcbc"
            android:layout_marginTop="10px">

            <Button
                android:id="@+id/btn_goodsprice"
                android:layout_width="320px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:text="下载商品和设置价格"
                android:textSize="26sp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:background="#bcbcbc"
            android:layout_marginTop="10px">

            <Button
                android:id="@+id/btn_mainmax"
                android:layout_width="320px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:text="满仓数设置"
                android:textSize="26sp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/exitrl"
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:background="#bcbcbc"
            android:layout_marginTop="10px">

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="320px"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:gravity="center"
                android:text="退出"
                android:textSize="26sp"
                android:textColor="@android:color/black"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/supplycoderl"
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:layout_marginTop="10px">

            <TextView
                android:id="@+id/supplycode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="24sp"
                />

        </RelativeLayout>

    </LinearLayout>






</RelativeLayout>